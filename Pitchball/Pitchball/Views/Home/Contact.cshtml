
@model Pitchball.Infrastructure.Commands.Message.CreateContactMessageCommand 
@{
    ViewData["Title"] = "Kontakt";
}
@section Styles{
    <link rel="stylesheet" href="~/css/sites/contact.css" />
}

@if (ViewBag.Added == true)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        Twoja wiadomość została <strong>wysłana pomyślnie!</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (ViewBag.ShowMessage == true)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="row">
    <div class="col-sm-6">
        <div class="card border-secondary mb-3">
            <div class="card-body">
                <h5 class="card-title">Kontakt</h5>
                <hr>
                <address>
                    Dawid G.<br />
                    Sosnowiec, Województwo Śląskie<br />
                    Telefon: 795-076-989
                </address>

                <address>
                    <strong>GitHub:</strong> <a href="https://github.com/G00ryl">github.com/G00ryl</a><br />
                </address>
            </div>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="card border-secondary mb-3">
            <div class=" card-body">
                <h5 class="card-title">Napisz do nas!</h5>
                <hr>
                <form action="../contact" method="post">
                    <div class="form-group">
                        <label for="name">Imię</label>
                        @Html.TextBoxFor(model => model.Name, new
                   {
                       @type = "text",
                       @class = "form-control",
                       @id = "name",
                       @placeholder = "Wprowadź imię",
                       @pattern = @"^[A-Za-z]\S{2,50}",
                       @required = "true"
                   })
                    </div>
                    <div class="form-group">
                        <label for="email">Adres email</label>
                        @Html.TextBoxFor(model => model.Email, new
                   {
                       @type = "email",
                       @class = "form-control",
                       @id = "email",
                       @placeholder = "Wprowadź email",
                       @pattern = @"^\w+([-+.']\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*",
                       @required = "true"
                   })
                    </div>
                    <div class="form-group">
                        <label for="message">Treść wiadomości</label>
                        @Html.TextAreaFor(model => model.Text, new
                   {
                       @type = "text",
                       @class = "form-control",
                       @id = "message",
                       @placeholder = "Wprowadź treść wiadomości",
                       @pattern = @".{5,400}",
                       @maxlength = "400",
                       @minlength = "5",
                       @required = "true"
                   })
                    </div>
                    <hr />
                    <button type="submit" class="btn btn-primary">Wyślij</button>
                </form>
            </div>
        </div>
    </div>
</div>