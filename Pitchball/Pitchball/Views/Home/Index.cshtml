@{
    ViewData["Title"] = "Home Page";
}

@section Styles{
    <link rel="stylesheet" href="~/css/Index.css" />
}

<div class="cardio">
    <div class="container body-content">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/images/1.jpg" class="img-responsive">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/2.jpg" class="img-responsive">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/3.jpg" class="img-responsive">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <hr />
        </div>
    </div>
</div>
<div class=" card">
    <h1 class="text-center">O nas..</h1>
    <p style="font-size:18px; margin:5px">Aplikacji Pitchball pozwala na rezerwację boisk w obrębie Zagłębia Dąbrowskiego. Dany obiekt rezerwujemy na daną godzinę i datę według naszych upodobań.</p>
    <hr />
    <div class="row">
        <div class="col-md-4 ">
            <div class="card text-center">
                <h2>Wygoda</h2>
                <div class="text-center">
                    <img class="mainImage" src="~/images/Sofa.png" />
                </div>
                <p style="font-size:17px;"><i>Zarezerwuj boisko, przez internet, nie ruszająć się z kanapy!</i></p>
            </div>

        </div>
        <div class="col-md-4 ">
            <div class="card text-center">
                <h2>Bezpieczeństwo</h2>
                <div class="text-center">
                    <img class="mainImage" src="~/images/Padlock.png" />
                </div>
                <p style="font-size:17px;"><i>Zawsze możesz bezpiecznie usunąć rezerwację w razie rezygnacji!</i></p>
            </div>
        </div>
        <div class="col-md-4 ">
            <div class="card">
                <h2 class="text-center">Pełna dowolność wyboru</h2>
                <div class="text-center">
                    <img class="mainImage" src="~/images/Pitch.png" />
                </div>
                <p style="font-size:17px;" class="text-center"><i>Wybieraj spośród ponad 20 boisk i rezerwuj!</i></p>
            </div>
        </div>
    </div>
</div>
<br>