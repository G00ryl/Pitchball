@model Pitchball.Infrastructure.Commands.Pitch.CreatePitchCommand

@{
    ViewData["Title"] = "NewPitch";
}
@section Styles{
    <link rel="stylesheet" href="~/css/sites/newPitch.css" />
}

@if (ViewBag.Added == true)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        Pitch has been <strong>successfully</strong> added.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (ViewBag.ShowMessage == true)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="card  mb-3" style="border-width:10px;">
    <div class="card-body bg-light">
        <h2 class="card-title text-center" style="color:forestgreen">Nowe boisko</h2>
        <hr>
        <form action="newpitch" method="post">
            <div class="form-group">
                <label for="description">Nazwa boiska</label>
                @Html.TextAreaFor(model => model.Name, new
           {
               @type = "text",
               @class = "form-control bg-light",
               @id = "description",
               @placeholder = "Nazwa boiska",
               @pattern = @"^[A-Za-z-0-9\.\-\!\?]+( [A-Za-z-0-9\.\-\!\?]+)*$",
               @minlength = "5",
               @maxlength = "250",
               @required = "true"
           })
            </div>
            
            <div class="form-group">
                <label for="nawierzchnia">Nawierzchnia</label>
                @Html.TextBoxFor(model => model.Surface, new
           {
               @type = "text",
               @class = "form-control bg-light",
               @id = "tags",
               @placeholder = "Sztuczna trawa / Beton/Asfalt / Tartan / Naturalna trawa",
               @pattern = @"^[a-z\-\;]+([a-z\-\;]+)*$",
               @minlength = "5",
               @maxlength = "200",
               @required = "true"
           })
            </div>
            <div class="form-group">
                <label for="Lightning">Oświetlenie</label>
                @Html.TextBoxFor(model => model.Lightning, new
           {
               @type = "text",
               @class = "form-control bg-light",
               @id = "tags",
               @placeholder = "Płatne / Darmowe / Brak",
               @pattern = @"^[a-z\-\;]+([a-z\-\;]+)*$",
               @minlength = "4",
               @maxlength = "200",
               @required = "true"
           })
            </div>
            <div class="form-group">
                <label for="street">Ulica</label>
                @Html.TextBoxFor(model => model.Street, new
           {
               @type = "text",
               @class = "form-control bg-light",
               @id = "tags",
               @placeholder = "Wpisz ulice",
               @pattern = @"^[a-z\-\;]+([a-z\-\;]+)*$",
               @minlength = "3",
               @maxlength = "200",
               @required = "true"
           })
            </div>
            <div class="form-group">
                <label for="city">Miasto</label>
                @Html.TextBoxFor(model => model.City, new
           {
               @type = "text",
               @class = "form-control bg-light",
               @id = "tags",
               @placeholder = "Wpisz miasto",
               @pattern = @"^[a-z\-\;]+([a-z\-\;]+)*$",
               @minlength = "3",
               @maxlength = "200",
               @required = "true"
           })
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>