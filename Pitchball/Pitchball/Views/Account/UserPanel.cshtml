@model Pitchball.Infrastructure.Commands.Account.CreateAccount

@{
	ViewData["Title"] = "User Panel";
}
@section Styles{
	<link rel="stylesheet" href="~/css/UserPanel.css" />

}

<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header text-success">
				<b><h2>Moje Konto</h2></b>
			</div>
            <div class="card-body">
                <form method="post" class="col-lg-12" asp-controller="Account">
                    <div class=" form-text col-lg-1">

                    </div>
                        <div class=" form-text col-lg-3 text-center ">
                            <h2><b><i>UserLogin</i></b></h2>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-lg-3 text-center">
                                <img src="~/images/Avatar.png" class=" img-responsive img-fluid img-thumbnail" alt="Alternate Text" /><br />
                            </div>
                            <div class="col-lg-1">
                            </div>
                            <div class="form-group  col-lg-6">
                                <label for="inputLogin">Imie</label>
                                <input type="text" asp-for="Name" class="form-control" id="name" value="Jan" disabled>
                                <label for="inputEmail">Nazwisko</label>
                                <input type="email" asp-for="Surname" class="form-control" id="surname" value="Kowalski" disabled />
                                <label for="inputEmail">Adres e-mail</label>
                                <input type="email" asp-for="Email" class="form-control" id="email" value="admin@exapmle.pl" disabled>
                                <br />
                                <a href="@Url.Action("userPanelEdit", "Home")" class=" text-center btn btn-info" style="" role="button">Edytuj profil</a>
                            </div>
                        </div
                    <hr />
                    <div class="row">
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-8 text-center">
                            <h2>Moje rezerwacje:</h2>
                            <div class="table-responsive-sm">
                                <table class="table table-light">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">Lp.</th>
                                            <th class="hidden" scope="col">Zdjęcie obiektu</th>
                                            <th scope="col">Nazwa obiektu</th>
                                            <th scope="col">Adres</th>
                                            <th scope="col">Dzień</th>
                                            <th scope="col">Godzina od</th>
                                            <th scope="col">Godzina do</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr class="table-row">
                                            <th scope="row">1</th>
                                            <td class="hidden"><img src="~/images/BoiskoKresowa.jpg" /></td>
                                            <td>Boisko Orlik Stadion Ludowy - ul.Kresowa 1</td>
                                            <td>ul.Kresowa 1</td>
                                            <td>29.04.2019</td>
                                            <td>13:30</td>
                                            <td>15:00</td>

                                        </tr>

                                        <tr class="table-active">
                                            <th scope="row">2</th>
                                            <td class="hidden"><img src="~/images/boiskoczarni.jpg" /></td>
                                            <td>Boisko Orlik KKS Czarni Sosnowiec</td>
                                            <td>ul.Mireckiego 31</td>
                                            <td>21.04.2019</td>
                                            <td>19:30</td>
                                            <td>21:00</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
		</div>
	</div>
</div>
