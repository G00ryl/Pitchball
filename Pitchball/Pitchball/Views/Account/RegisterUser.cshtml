@model Pitchball.Infrastructure.Commands.Account.CreateAccount

@{
    ViewData["Title"] = "User Registration";
}
@section Styles{
    <link rel="stylesheet" href="~/css/RegisterUser.css" />

}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header text-success">
                <b><h2>Zawodnik</h2></b>
            </div>
            <div class="card-body">
                <form method="post" asp-action="RegisterUserAsync" asp-controller="Account">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputLogin">Login</label>
                            <input type="text" asp-for="Login" class="form-control" id="login" placeholder="Login">
                            <span asp-validation-for="Login" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputEmail">Email</label>
                            <input type="email" asp-for="Email" class="form-control" id="email" placeholder="example@mail.com">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <hr />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Imię</label>
                            <input type="text" asp-for="Name" class="form-control" id="name" placeholder="Jan">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Nazwisko</label>
                            <input type="text" asp-for="Surname" class="form-control" id="surname" placeholder="Kowalski">
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                    </div>
                    <hr />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputPassword">Hasło</label>
                            <input type="password" asp-for="Password" class="form-control" id="password" placeholder="Hasło">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputConfirmPassword">Powtórz hasło</label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder="Powtórz hasło">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <hr />
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="customCheck1" required>
                        <label class="custom-control-label" for="customCheck1">
                                Oświadczam, że znam i akceptuję postanowienia
                                <a href="@Url.Action("regulations", "Home")"><b>Regulaminu Pitchball</b></a>.
                        </label>
                    </div>
                    <br />

                    <button type="submit" class="btn btn-success">ZAREJESTRUJ</button>
                </form>
            </div>
        </div>
    </div>
</div>
