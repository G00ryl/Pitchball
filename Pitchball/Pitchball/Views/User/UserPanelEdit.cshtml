@model Pitchball.Infrastructure.ViewModels.Account.AccountSettingsViewModel

@{
    ViewData["Title"] = "User Edit";
}
@section Styles{
    <link rel="stylesheet" href="~/css/UserPanelEdit.css" />
}
<div class="card">
    <div class="card-header text-success">
        <h1>Ustawienia konta</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-3 text-center">
                <div class="card">
                    <div class="card-header">
                        <h4>Zmiana avataru</h4>
                    </div>
                        <form method="post" class="text-center" style="margin:3%" asp-controller="Account">
                            <div class="form-row">
                                <div class="form-group col-lg-12 text-center">             
                                        <img src="~/images/Avatar.png" class=" img-responsive img-fluid img-thumbnail" alt="Alternate Text" /><br />
                                    
                                    <p><small>Na zdjęciu musi być dobrze widoczna twoja twarz.</small></p>
                                    <div class="input-group">
                                        
                                        <div class="custom-file text-left">
                                            <input type="file" class="custom-file-input" id="inputGroupFile01"
                                                   aria-describedby="inputGroupFileAddon01">
                                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-info text-center">Aktualizuj avatar</button>
                        </form>                  
                </div>
            </div>
            <div class="col-lg-9">
                <div class="card">
                    <div class="card-header text-center"><h4>Zmiana hasła</h4></div>
                    <form method="post" class="col-lg-12" asp-controller="Account">
                        <div class="form-row">
                            <div class="form-group col-lg-12">
                                <label for="oldPassword">Stare hasło</label>
                                <input type="text" asp-for="Command.OldPassword" class="form-control" id="oldPassword">
                                <span asp-validation-for="Command.OldPassword" class="text-danger"></span>

                                <label for="newPassword">Nowe hasło</label>
                                <input type="text" asp-for="Command.NewPassword" class="form-control" id="newPassword">
                                <span asp-validation-for="Command.NewPassword" class="text-danger"></span>

                                <label for="confirmNewPassword">Potwierdź nowe hasło</label>
                                <input type="text" asp-for="Command.ConfirmNewPassword" class="form-control" id="confirmNewPassword">
                                <span asp-validation-for="Command.ConfirmNewPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">Aktualizuj hasło</button>
                    </form>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>


