@model Pitchball.Infrastructure.ViewModels.Account.AccountSettingsViewModel

@{
    ViewData["Title"] = "User Edit";
}
@section Styles{
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/UserPanelEdit.css" />
}
@section Scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
}

<div class="card">
    <div class="card-header text-success">
        <h1>Ustawienia konta</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-3 text-center">
                <div class="card">
                    <div class="card-header">
                        <h4>Zmiana avataru</h4>
                    </div>
                    <form method="post" class="text-center" enctype="multipart/form-data" style="margin:3%" asp-controller="User" asp-action="AddOrUpdatePictureAsync">
                        <div class="form-row">
                            <div class="form-group col-lg-12 text-center">
                                @{
                                    var image = Url.Action("GetPictureAsync", "User");
                                    <img src="@image" class=" img-responsive img-fluid img-thumbnail" alt="Alternate Text" /><br />
                                }

                                <p><small>Na zdjęciu musi być dobrze widoczna twoja twarz.</small></p>
                                <div class="custom-file mb-3 text-left">
                                    <input type="file" class="custom-file-input" lang="pl-PL" id="customFile" name="Image">
                                    <label class="custom-file-label" for="customFile" lang="pl-PL">Wybierz plik</label>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-info text-center">Aktualizuj avatar</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="card">
                    <div class="card-header text-center"><h4>Zmiana hasła</h4></div>
                    <form method="post" class="col-lg-12" asp-controller="User" asp-action="UpdatePasswordAsync">
                        <div class="form-row">
                            <div class="form-group col-lg-12">
                                <label for="oldPassword">Stare hasło</label>
                                <input type="password" asp-for="Command.OldPassword" class="form-control" id="oldPassword">
                                <span asp-validation-for="Command.OldPassword" class="text-danger"></span>

                                <label for="newPassword">Nowe hasło</label>
                                <input type="password" asp-for="Command.NewPassword" class="form-control" id="newPassword">
                                <span asp-validation-for="Command.NewPassword" class="text-danger"></span>

                                <label for="confirmNewPassword">Potwierdź nowe hasło</label>
                                <input type="password" asp-for="Command.ConfirmNewPassword" class="form-control" id="confirmNewPassword">
                                <span asp-validation-for="Command.ConfirmNewPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">Aktualizuj hasło</button>
                    </form>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });

</script>


